---
import BaseLayout from '../layouts/BaseLayout.astro';
import { SITE } from '../config';
---

<BaseLayout title={`Search | ${SITE.title}`}>
  <div class="container">
    <header class="page-header">
      <a href="/" class="back-link">‚Üê Home</a>
      <h1>Search</h1>
    </header>

    <main>
      <div id="search"></div>
    </main>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .page-header {
    margin-bottom: 3rem;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1rem;
    color: var(--color-secondary);
  }

  .page-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  #search {
    margin-top: 2rem;
  }

  /* Pagefind styling */
  :global(.pagefind-ui__search-input) {
    width: 100%;
    padding: 0.75rem 1rem;
    font-size: 1rem;
    border: 2px solid var(--color-border);
    border-radius: 8px;
    background: var(--color-bg);
    color: var(--color-text);
  }

  :global(.pagefind-ui__search-input:focus) {
    outline: none;
    border-color: var(--color-primary);
  }

  :global(.pagefind-ui__result) {
    padding: 1rem;
    margin-bottom: 1rem;
    border: 1px solid var(--color-border);
    border-radius: 8px;
  }

  :global(.pagefind-ui__result-title) {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
  }

  :global(.pagefind-ui__result-link) {
    color: var(--color-primary);
    text-decoration: none;
  }

  :global(.pagefind-ui__result-link:hover) {
    text-decoration: underline;
  }

  :global(.pagefind-ui__result-excerpt) {
    display: none;
  }

  :global(.pagefind-ui__message) {
    color: var(--color-secondary);
    padding: 1rem;
  }
</style>

<script>
  // @ts-ignore
  import { PagefindUI } from '@pagefind/default-ui';

  new PagefindUI({
    element: '#search',
    showSubResults: false,
    showImages: false,
    excerptLength: 0
  });
</script>

<style is:global>
  @import '@pagefind/default-ui/css/ui.css';
</style>
