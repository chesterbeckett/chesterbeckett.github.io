---
import BaseLayout from './BaseLayout.astro';
import { SITE, SOCIAL } from '../config';

interface Props {
  title: string;
  description?: string;
  date: Date;
  updatedDate?: Date;
  categories?: string[];
  tags?: string[];
  image?: string;
}

const { title, description, date, updatedDate, categories = [], tags = [], image } = Astro.props;

const formattedDate = date.toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});

const formattedUpdatedDate = updatedDate?.toLocaleDateString('en-GB', {
  year: 'numeric',
  month: 'long',
  day: 'numeric'
});
---

<BaseLayout title={`${title} | ${SITE.title}`} description={description} image={image}>
  <div class="container">
    <header class="site-header">
      <a href="/" class="site-title">
        <img src={SITE.avatar} alt={SITE.author} class="avatar" />
        <div>
          <h1>{SITE.title}</h1>
          <p>{SITE.tagline}</p>
        </div>
      </a>
      <nav>
        <a href="/">Home</a>
        <a href="/blog">Blog</a>
        <a href="/search">Search</a>
        <a href="/about">About</a>
      </nav>
    </header>

    <main>
      <article class="post" data-pagefind-body>
        <header class="post-header">
          <h1>{title}</h1>
          <div class="post-meta">
            <time datetime={date.toISOString()}>{formattedDate}</time>
            {updatedDate && (
              <span class="updated">
                (Updated: <time datetime={updatedDate.toISOString()}>{formattedUpdatedDate}</time>)
              </span>
            )}
          </div>
          {categories.length > 0 && (
            <div class="categories">
              {categories.map(cat => (
                <span class="category">{cat}</span>
              ))}
            </div>
          )}
        </header>

        <div class="post-content">
          <slot />
        </div>

        {tags.length > 0 && (
          <footer class="post-footer">
            <div class="tags">
              {tags.map(tag => (
                <a href={`/tags/${tag}`} class="tag">#{tag}</a>
              ))}
            </div>
          </footer>
        )}
      </article>
    </main>

    <footer class="site-footer">
      <p>&copy; {new Date().getFullYear()} {SITE.author}. All rights reserved.</p>
      <div class="social-links">
        <a href={`https://github.com/${SOCIAL.github}`} target="_blank" rel="noopener">GitHub</a>
        <a href={`https://twitter.com/${SOCIAL.twitter}`} target="_blank" rel="noopener">Twitter</a>
        <a href="/rss.xml">RSS</a>
      </div>
    </footer>
  </div>
</BaseLayout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  .site-header {
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid var(--color-border);
  }

  .site-title {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    text-decoration: none;
    color: var(--color-text);
  }

  .site-title:hover {
    text-decoration: none;
  }

  .avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
  }

  .site-title h1 {
    font-size: 1.5rem;
    margin: 0;
  }

  .site-title p {
    color: var(--color-secondary);
    font-size: 0.9rem;
    margin: 0;
  }

  nav {
    display: flex;
    gap: 1.5rem;
  }

  nav a {
    color: var(--color-secondary);
    font-weight: 500;
  }

  nav a:hover {
    color: var(--color-primary);
  }

  .post-header {
    margin-bottom: 2rem;
  }

  .post-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
    line-height: 1.2;
  }

  .post-meta {
    color: var(--color-secondary);
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  .updated {
    margin-left: 0.5rem;
  }

  .categories {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .category {
    background: var(--color-code-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    color: var(--color-secondary);
  }

  .post-content {
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .post-content :global(h2) {
    margin-top: 2rem;
    margin-bottom: 1rem;
    font-size: 1.8rem;
  }

  .post-content :global(h3) {
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
    font-size: 1.4rem;
  }

  .post-content :global(p) {
    margin-bottom: 1rem;
  }

  .post-content :global(ul),
  .post-content :global(ol) {
    margin-bottom: 1rem;
    padding-left: 2rem;
  }

  .post-content :global(li) {
    margin-bottom: 0.5rem;
  }

  .post-content :global(img) {
    margin: 2rem 0;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .post-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    background: var(--color-code-bg);
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.85rem;
    color: var(--color-primary);
  }

  .tag:hover {
    background: var(--color-primary);
    color: var(--color-bg);
    text-decoration: none;
  }

  .site-footer {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
    text-align: center;
    color: var(--color-secondary);
    font-size: 0.9rem;
  }

  .social-links {
    margin-top: 1rem;
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  @media (max-width: 640px) {
    .post-header h1 {
      font-size: 2rem;
    }

    .post-content {
      font-size: 1rem;
    }
  }
</style>
